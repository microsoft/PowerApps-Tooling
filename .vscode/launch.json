{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch (console)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/bin/Debug/PASopa/PASopa.dll",
        "args": [
          "-test",
          "${workspaceFolder}/src/PAModelTests/Apps/AccountPlanReviewerMaster.msapp"
        ],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
        "console": "internalConsole"
      },

      {
        "name": "Run build targets",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build targets",
        "program": "${workspaceFolder}/targets/bin/Debug/net7.0/targets.dll",
        "args": [
          "build",
          "-c", "release"
        ],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
        "console": "internalConsole"
      }
    ]
}
